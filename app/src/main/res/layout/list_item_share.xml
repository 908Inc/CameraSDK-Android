<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/material_48"
                android:minHeight="@dimen/material_48"
                android:paddingLeft="@dimen/material_16"
                android:paddingRight="@dimen/material_16">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/material_24"
        android:layout_height="@dimen/material_24"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/material_32"
        android:contentDescription="@null"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@android:id/icon"
        android:singleLine="true"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_16"/>

</RelativeLayout>